pipeline {
    agent any
    options {
        timeout(time: 60, unit: 'SECONDS')
    }
    triggers {
        pollSCM 'H/1 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/dMichalak1/Jenkins.git'
                bat './mvnw package'

            }
        }
parallel {
        stage('Report junit') {
            steps {
                junit 'target/surefire-reports/*.xml'

            }
        }
        stage('Report jacoco') {
            steps {
                jacoco()
            }
        }
    }
         
    }
}
